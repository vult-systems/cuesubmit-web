# CueSubmit Web Configuration
# Copy this file to .env.local for local development

# Mode: "online" connects to REST Gateway, "offline" uses mock data
CUEWEB_MODE=offline

# REST Gateway URL (OpenCue REST API)
REST_GATEWAY_URL=http://localhost:8448

# Session secrets (use strong random values in production)
JWT_SECRET=
SESSION_SECRET=

# Database path for SQLite
DATABASE_PATH=./data/cuesubmit.db

# Initial admin password (only used on first run)
ADMIN_INITIAL_PASSWORD=changeme

# File server IP for UNC paths (render farm file server)
FILE_SERVER_IP=
NEXT_PUBLIC_FILE_SERVER_IP=

# OpenCue PostgreSQL (only needed for direct DB access like show deletion)
OPENCUE_DB_HOST=localhost
OPENCUE_DB_PASSWORD=

# SSH host for sync-db script (user@host)
# PROD_SSH_HOST=user@your-server
